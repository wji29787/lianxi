/* 设备管理 */
.content-list{
  dl{
      padding-left:0.80rem;
      dd{
        &.list-first{
          width:2.20rem;
        };
        &.list-second{
          width:2.60rem;
        };
        &.list-third{
         width:3.56rem;
        };
        &.list-four{
         width:2.20rem;
        };
        &.list-fifth{
         width:2.26rem;
        };
         &.list-six{
          width:1.8rem;
        };
      }
     }
   &.content-list-tbody{
      dd{
         &.list-six{
           a{
            &.look-a{
               color:#09b2b0;
             }
           }
        };
      }
   };
}

#deviceManagement .content-list-thead dl dd{
	text-indent:0;
}

/*******查看设备弹出层***start*********/
.list-information-box{
    /*padding:0.33rem 0.80rem 0;*/
    margin:0.33rem auto 0;
    ul{
       width:10.48rem;
       background:#eee;
       margin-bottom:0.50rem;
       li{
         float:left;
         div{
            font-size:0.20rem;
            overflow: hidden;
            label{
              float:left;
              width:1.08rem;
              height:0.38rem;
              line-height:0.38rem;
              color: #eef5ff;
            };
            input{
               float:left;
               color:#9d9d9d;
               width:9.32rem;
               height:0.38rem;
               border:0.01rem solid #4a69a4;
               background-color: #172449;
               color: #eef5ff;
               border-radius:0.04rem;
               padding-left:0.10rem;
            }
           &.server-list{
           	  width:10.4rem;
              box-sizing:border-box;
              overflow:hidden;
              border: 1px solid #374569;
              border-radius: 0.04rem;
              margin-bottom:0.2rem;
              padding-bottom:0.03rem;
              dl{
               display:block;
               height:0.4rem;
               line-height:0.4rem;
               dd{
                  float:left;
                  text-align:center;
                  overflow: hidden;
                  text-overflow:ellipsis;
                  white-space: nowrap;
                  width:25%;
                  height:0.4rem;
                  box-sizing:border-box;
               }
             }
             .list-thead{
               margin: .03rem .03rem 0 .03rem;
               dl{
                 border-radius: .03rem .03rem 0 0;
                 border-bottom: 1px solid #374569;
               }; 
              color: #eef5ff;
             };
            .list-tbody{
            	  max-height:4rem;
            	  overflow-y:auto;
                  margin: .03rem .03rem 0 .03rem;
	              dl{
	                border-bottom: 1px solid #374569;
	                height:0.4rem;
	                box-sizing:border-box;
	                color: #eef5ff;
	                overflow:hidden;
	              }
	              dl:last-child{
               	 border-bottom:none;
               }
             };
           }
         };
         p{
           float:left;
           padding-left:1.08rem;
           height:0.29rem;
           line-height:0.29rem;
           font-size:0.14rem;
           color:red;
         }
         &.short-item{
             select{
                width:3.77rem;
             }
             input{
               width:3.77rem;
            }
         };
         &.short-item-margin{
           margin-right:0.70rem;
         }
       }
    }
}    
/***********end***************/
